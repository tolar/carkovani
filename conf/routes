# Routes
# This file defines all ApplicationController routes (Higher priority routes first)
# ~~~~
GET         /                           controllers.ApplicationController.index
GET         /dashboard/:hash            controllers.ApplicationController.dashboard(hash)
GET         /dashboardData/:hash        controllers.ApplicationController.dashboardData(hash)
GET         /dashboardsData/:hashes     controllers.ApplicationController.dashboardsData(hashes)
GET         /ws/:hash                   controllers.ApplicationController.ws(hash)
GET         /showNewDashboard           controllers.ApplicationController.showNewDashboard
POST        /processNewDashboard        controllers.ApplicationController.processNewDashboard
GET         /showDashboardItems         controllers.ApplicationController.showDashboardItems
POST        /addItem                    controllers.ApplicationController.addItem
POST        /removeItem                 controllers.ApplicationController.removeItem
GET         /showDashboardOwner         controllers.ApplicationController.showDashboardOwner
POST        /processDashboardOwner      controllers.ApplicationController.processDashboardOwner
GET         /rest/dashboard/:hash       controllers.ApplicationController.restGetDashboard(hash)

POST        /oauth2/access_token        controllers.OAuthController.accessToken


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file               controllers.Assets.at(path="/public", file)
GET         /.well-known/assetlinks.json    controllers.Assets.at(path="/public", file="well-known/assetlinks.json")

